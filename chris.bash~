#!/usr/bin/bash

SCRIPT_DIR="$(pwd)"
app_name=''

while getopts n flag
do
    case "${flag}" in
	n) app_name=${OPTARG};;
    esac
done

if [-f $SCRIPT_DIR/grafana.yaml]; then
    echo "Missing grafana.yaml file"
fi
if [-f $SCRIPT_DIR/grafana.yaml]; then
    echo "Missing grafana.yaml file"
fi
if [-f $SCRIPT_DIR/grafana.yaml]; then
    echo "Missing grafana.yaml file"
fi


helm install grafana$app_name grafana/grafana -f grafana.yaml
